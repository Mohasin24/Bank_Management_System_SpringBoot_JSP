<%@ page isErrorPage="true" %>
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>Error Page</title>
</head>
<body>
    <h1>Oops! Something went wrong.</h1>
    <h3>We apologize for the inconvenience. An unexpected error occurred.</h3>
    <h3>Please try again later or contact support if the problem persists.</h3>
    <%-- <p>Error Details:</p>
    <p><b>Exception Type:</b> <%= exception.getClass().getName() %></p>
    <p><b>Message:</b> <%= exception.getMessage() %></p>
    <p><b>Stack Trace:</b></p>
    <pre><%= exception.getStackTrace() %></pre> --%>
</body>
</html>
